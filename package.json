{
  "name": "tnt-monorepo",
  "version": "0.0.0",
  "author": "Thom Bruce <thom@thombruce.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "docs:dev": "cd docs && yarn dev",
    "docs:build": "cd docs && yarn build",
    "docs:start": "cd docs && yarn start",
    "docs:generate": "cd docs && yarn generate",
    "release": "yarn release:patch",
    "release:patch": "lerna run build && lerna publish --yes --cd-version=patch",
    "release:minor": "lerna run build && lerna publish --yes --cd-version=minor",
    "release:major": "lerna run build && lerna publish --yes --cd-version=major"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
